<p style="color: green"><%= notice %></p>

<h1>Styles</h1>

<div id="styles">
  <% @styles.each do |style| %>
    <h3><%= style.name %></h3>
    <p>
      <%= style.description %>
    </p>
    
    <p>
      <%= link_to "Show this style", style %>
    </p>
  <% end %>
</div>

<p>
<%= link_to "New style", new_style_path %>
</p>
